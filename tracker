#!/bin/sh
initial_dir=`pwd`
test "$initial_dir/.tracker" && case $1 in

#start
	s) sh "$initial_dir/.tracker" s ;;
#edit
	e) sh "$initial_dir/.tracker" e ;;
#List Files
	l) sh "$initial_dir/.tracker" l ;;
#stop entr
	x) sh "$initial_dir/.tracker" x ;;
#generate pdf
	g) sh "$initial_dir/.tracker" g ;;
#initiate file tracking
esac || 
echo "no tracker file exists please crate one with the i option"

